{
    "version": 2,
    "$schema": "https://schemas.wp.org/wp/6.4/theme.json",
    "title": "Blue",
    "settings": {
        "color": {
            "palette": [
                {
                    "color": "#0B60B0",
                    "name": "Primary",
                    "slug": "primary"
                },
                {
                    "color": "#020202",
                    "name": "Secondary",
                    "slug": "secondary"
                },
                {
                    "color": "#3c7ebb",
                    "name": "Primary-Hover",
                    "slug": "primary-hover"
                }
            ]
        }
    },
    "styles": {
        "blocks": {
            "core/post-date": {
                "color": {
                    "text": "#f8f8f8"
                },
                "elements": {
                    "link": {
                        ":hover": {
                            "color": {
                                "text": "#afafaf"
                            }
                        },
                        "color": {
                            "text": "#f3f3f3"
                        }
                    }
                }
            }
        },
        "color": {
            "background": "#CEDDEF",
            "text": "var(--wp--preset--color--secondary)"
        },
        "elements": {
            "button": {
                ":hover": {
                    "color": {
                        "background": "var(--wp--preset--color--primary-hover)"
                    }
                },
                "color": {
                    "background": "var(--wp--preset--color--primary)",
                    "text": "var(--wp--preset--color--white)"
                }
            },
            "h1": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--kurale)",
                    "fontSize": "5em",
                    "lineHeight": "1.2"
                }
            },
            "h2": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--kurale)",
                    "fontSize": "2.22em",
                    "lineHeight": 1.4
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--sora)"
        }
    }
}